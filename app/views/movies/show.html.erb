<section id="movie-details">
  <h1><%= @movie.title %></h1>
  <li>Creation Year:      <%= @movie.creation_year %> 
  <li>Genre:              <%= @movie.genre%> 
  <li>Actors:             <%= @movie.actors_by_age.pluck(:name).to_sentence%> 
  <li>Average Actor Age:  <%= @movie.actor_avg_age %> 
</section>

<h3> Add an Actor to Movie </h3>

<%= form_tag movie_path(@movie.id) do %>
  <%= label_tag :name, 'Name:' %>
  <%= text_field_tag :name,  '', :required => true%><br>
  <%= label_tag :age, 'Age:' %>
  <%= text_field_tag :age, '', :required => true%><br>
  <%= submit_tag 'Add' %>
<% end %>